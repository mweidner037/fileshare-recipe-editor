{
  "name": "fileshare-recipe-editor",
  "version": "0.0.0",
  "description": "Local-first collaborative recipe editor on top of Dropbox",
  "author": "Matthew Weidner",
  "license": "Apache-2.0",
  "main": "build/main/main/main.js",
  "config": {
    "forge": {
      "packagerConfig": {
        "dir": "build"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@collabs/collabs": "^0.11.0",
    "chokidar": "^3.5.3",
    "quill": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/node": "^18.11.17",
    "@types/quill": "^1.3.10",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^22.0.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:main": "tsc --build tsconfig-main.json",
    "build:renderer": "cross-env TS_NODE_PROJECT='tsconfig-for-webpack-config.json' webpack",
    "make": "npm-run-all make:*",
    "make:clean": "npm run clean",
    "make:main": "npm run build:main",
    "make:renderer": "cross-env TS_NODE_PROJECT='tsconfig-for-webpack-config.json' webpack --mode production",
    "make:forge": "electron-forge make",
    "start": "electron-forge start",
    "test": "npm-run-all test:*",
    "test:lint": "eslint --ext .ts .",
    "test:format": "prettier --check .",
    "fix": "npm-run-all fix:*",
    "fix:format": "prettier --write .",
    "clean": "rimraf build out"
  }
}
